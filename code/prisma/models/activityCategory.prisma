model ActivityCategory {
  id          String      @id @default(cuid())
  name        String      @unique
  description String?
  role        CategoryRole?  // student/TA-specific eligibility

  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  activities  Activity[]

  @@map("activity_category")
}

enum CategoryRole {
  STUDENT
  TA
  ALL         
}
