{
  "name": "monkey-school-htmx",
  "version": "1.0.0",
  "description": "Production-grade Express + Prisma + HTMX application with accessibility and internationalization",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "export $(grep -v '^#' .env | xargs) && nodemon src/server.js",
    "start": "export $(grep -v '^#' .env | xargs) && node src/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .js",
    "docs": "jsdoc -c jsdoc.config.json",
    "docs:preview": "npm run docs && npx serve docs/jsdoc",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "export $(grep -v '^#' .env.test | xargs) && npm run test:e2e",
    "test:e2e": "npm-run-all -s db:test:migrate test:coverage db:test:drop",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --runInBand",
    "db:test:migrate": "sh -c 'echo \"Using test database: $DATABASE_URL\" && prisma migrate deploy'",
    "db:test:drop": "sh -c 'echo \"Dropping test database: $DATABASE_URL\" && npx prisma migrate reset --force'"
  },
  "prisma": {
    "seed": "node scripts/mock/db-seed.js"
  },
  "keywords": [
    "express",
    "prisma",
    "postgresql",
    "htmx",
    "accessibility",
    "internationalization",
    "a11y",
    "i18n"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@auth/express": "^0.12.1",
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "^6.19.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "eslint-plugin-jsdoc": "^61.2.1",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-cucumber": "^4.5.0",
    "jsdoc": "^4.0.5",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prisma": "^6.19.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
