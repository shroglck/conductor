{
  "name": "monkey-school-htmx",
  "version": "1.0.0",
  "description": "Production-grade Express + Prisma + HTMX application with accessibility and internationalization",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "dev": "export $(cat .env | xargs) && node src/server.js",
    "start": "export $(cat .env | xargs) && node src/server.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.js\"",
    "test": "export $(cat .env.test | xargs) && npm run test:e2e",
    "test:e2e": "npm-run-all -s db:test:migrate test:coverage db:test:drop",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "db:test:migrate": "sh -c 'echo \"Using test database: $DATABASE_URL\" && prisma migrate deploy'",
    "db:test:drop": "sh -c 'echo \"Dropping test database: $DATABASE_URL\" && npx prisma migrate reset --force'"
  },
  "keywords": [
    "express",
    "prisma",
    "postgresql",
    "htmx",
    "accessibility",
    "internationalization",
    "a11y",
    "i18n"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@paralleldrive/cuid2": "^3.0.4",
    "@prisma/client": "^5.22.0",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ejs": "^3.1.9",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "globals": "^16.5.0",
    "jest": "^30.2.0",
    "jest-cucumber": "^4.5.0",
    "jsdom": "^25.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
